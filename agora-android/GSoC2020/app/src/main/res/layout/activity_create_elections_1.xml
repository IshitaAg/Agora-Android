<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/create_elections_background" />

    <TextView
        android:id="@+id/textView21"
        android:text="@string/details"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/create_elections_details_style" />

    <EditText
        android:id="@+id/create_election_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/rounded_rectangle_50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView21"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView22"
        style="@style/form_field_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/election_name"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toTopOf="@+id/create_election_name"
        app:layout_constraintEnd_toEndOf="@+id/create_election_name"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="@+id/create_election_name" />

    <EditText
        android:id="@+id/create_election_description"
        android:layout_width="0dp"
        android:layout_height="227dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/rounded_rectangle_50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintEnd_toEndOf="@+id/create_election_name"
        app:layout_constraintStart_toStartOf="@+id/create_election_name"
        app:layout_constraintTop_toBottomOf="@+id/create_election_name" />

    <TextView
        android:id="@+id/textView23"
        style="@style/form_field_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/description"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toTopOf="@+id/create_election_description"
        app:layout_constraintEnd_toEndOf="@+id/create_election_description"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="@+id/create_election_description" />

    <EditText
        android:id="@+id/create_start_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_rectangle_50dp"
        android:ems="10"
        android:inputType="date"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintEnd_toEndOf="@+id/create_election_description"
        app:layout_constraintStart_toStartOf="@+id/create_election_description"
        app:layout_constraintTop_toBottomOf="@+id/create_election_description" />

    <TextView
        android:id="@+id/textView24"
        style="@style/form_field_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/start_date"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toTopOf="@+id/create_start_date"
        app:layout_constraintEnd_toEndOf="@+id/create_start_date"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="@+id/create_start_date" />

    <EditText
        android:id="@+id/create_end_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_rectangle_50dp"
        android:ems="10"
        android:inputType="date"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintEnd_toEndOf="@+id/create_start_date"
        app:layout_constraintStart_toStartOf="@+id/create_start_date"
        app:layout_constraintTop_toBottomOf="@+id/create_start_date" />

    <TextView
        android:id="@+id/textView25"
        style="@style/form_field_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/end_date"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toTopOf="@+id/create_end_date"
        app:layout_constraintEnd_toEndOf="@+id/create_end_date"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="@+id/create_end_date" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/colorYellow"
        android:clickable="true"
        app:borderWidth="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_right_arrow" />

    <ImageView
        android:id="@+id/calender_btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/create_start_date"
        app:layout_constraintEnd_toEndOf="@+id/create_start_date"
        app:layout_constraintTop_toTopOf="@+id/create_start_date"
        app:srcCompat="@drawable/ic_calendar" />

    <ImageView
        android:id="@+id/calender_btn_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/create_end_date"
        app:layout_constraintEnd_toEndOf="@+id/create_end_date"
        app:layout_constraintTop_toTopOf="@+id/create_end_date"
        app:srcCompat="@drawable/ic_calendar" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_left_arrow" />

</androidx.constraintlayout.widget.ConstraintLayout>